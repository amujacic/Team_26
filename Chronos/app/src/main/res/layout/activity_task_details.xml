<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/cl_ct"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sp_dark_gray">

        <TextView
            android:id="@+id/tv_td_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/sp_green"
            android:padding="30dp"/>

        <TextView
            android:id="@+id/tv_td_date_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="10dp"
            android:text="@string/date"
            android:textColor="@color/sp_green"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_td_date"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@color/sp_light_gray"
            android:ems="10"
            android:focusable="false"
            android:importantForAutofill="no"
            android:padding="20dp"
            android:textColor="@color/sp_white" />

        <TextView
            android:id="@+id/tv_td_group_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="10dp"
            android:text="@string/group"
            android:textColor="@color/sp_green"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_td_group"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@color/sp_light_gray"
            android:ems="10"
            android:focusable="false"
            android:importantForAutofill="no"
            android:padding="20dp"
            android:textColor="@color/sp_white" />

        <TextView
            android:id="@+id/tv_td_description_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="10dp"
            android:text="@string/description"
            android:textColor="@color/sp_green"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_td_description"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:autofillHints=""
            android:background="@color/sp_light_gray"
            android:ems="10"
            android:gravity="start|top"
            android:lines="10"
            android:padding="20dp"
            android:textColor="@color/sp_white" />


    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>